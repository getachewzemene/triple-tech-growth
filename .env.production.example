# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Node Environment
NODE_ENV=production

# Application URL
NEXT_PUBLIC_BASE_URL=https://tripletechnologies.com
NEXTAUTH_URL=https://tripletechnologies.com

# Database (Production PostgreSQL)
DATABASE_URL="postgresql://user:password@postgres:5432/tripleacademy"
POSTGRES_USER=tripletech
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=tripleacademy

# NextAuth Secret (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=GENERATE_A_STRONG_SECRET_HERE

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-access-key
S3_BUCKET_NAME=tripleacademy-videos-prod

# CloudFront Configuration
CLOUDFRONT_KEYPAIR_ID=your-production-cloudfront-keypair-id
CLOUDFRONT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-production-cloudfront-private-key-here\n-----END PRIVATE KEY-----"
NEXT_PUBLIC_CDN_BASE_URL=https://your-cloudfront-domain.cloudfront.net

# Playback Security (Generate with: openssl rand -base64 32)
PLAYBACK_JWT_SECRET=GENERATE_A_STRONG_PLAYBACK_SECRET

# DRM Provider (Optional - Enterprise)
DRM_PROVIDER_API_KEY=your-drm-provider-api-key

# Upload Configuration
PRESIGNED_URL_EXPIRY_SECONDS=300
MAX_VIDEO_UPLOAD_BYTES=1610612736
MAX_PROOF_UPLOAD_BYTES=10485760

# Email Configuration (Production)
SMTP_URL="smtp://user:password@smtp.production.com:587"
# Or use SendGrid
# SENDGRID_API_KEY=your-production-sendgrid-api-key
# Or use AWS SES
# AWS_SES_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@tripletechnologies.com

# Payment Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400

# CORS Configuration
ALLOWED_ORIGINS=https://tripletechnologies.com,https://www.tripletechnologies.com

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRY=7d

# Redis (Optional - for session storage and caching)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
